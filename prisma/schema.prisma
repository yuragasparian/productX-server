generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Products {
  id                 Int      @id @default(autoincrement())
  add_date           DateTime @default(now())
  last_modified_date DateTime @updatedAt
  name               String
  sku                Int      @unique
  description        String   @db.Text
  price              Int
  stock_quantity     Int
  product_image      String
  category_id        Int
  adder_id           Int
  adder              User     @relation(fields: [adder_id], references: [id])
  category           Category @relation(fields: [category_id], references: [id])
}

model Category {
  id       Int        @unique
  name     String     @unique
  products Products[]
}

model User {
  id         Int        @id @default(autoincrement())
  username   String     @unique
  password   String
  user_image String
  products   Products[]
}
