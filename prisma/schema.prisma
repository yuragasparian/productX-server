generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Products {
  id                 Int              @id @default(autoincrement())
  add_date           DateTime         @default(now())
  last_modified_date DateTime         @updatedAt
  name               String
  sku                Int              @unique
  description        String           @db.Text
  price              Int
  stock_quantity     Int
  product_image      String
  adder_id           Int
  category           ProductCategory
  adder              User             @relation(fields: [adder_id], references: [id])
  history            ProductHistory[]
}

enum ProductCategory {
  Electronics
  Clothing
  Home_Appliances
  Books
  Beauty
  Sports
  Food
  Furniture
  Toys
  Automotive
}

model User {
  id         Int        @id @default(autoincrement())
  username   String     @unique
  password   String
  user_image String
  products   Products[]
}

model ProductHistory {
  id          Int      @id @default(autoincrement())
  product_id  Int
  change_made String
  change_time DateTime @default(now())
  product     Products @relation(fields: [product_id], references: [id])
}
